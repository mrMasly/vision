@import '../../styles/variables.styl'
@import '../../styles/mixins.styl'

snackbar-height = 48px
snackbar-padding = 14px
snackbar-space = snackbar-height / 2

.v-snackbar
  display flex
  position fixed
  right 0
  left 0
  z-index 120
  pointer-events none
  transition swift-ease-out
  transition-property margin-top, margin-bottom

  &.v-position-top-center,
  &.v-position-bottom-center
    justify-content center

  &.v-position-top-right,
  &.v-position-bottom-right
    margin-right snackbar-space
    justify-content flex-end

  &.v-position-top-left,
  &.v-position-bottom-left
    margin-left snackbar-space
    justify-content flex-start

  &.v-position-top-right,
  &.v-position-top-left,
  &.v-position-top-center
    margin-top snackbar-space

  &.v-position-bottom-right,
  &.v-position-bottom-left
    margin-bottom snackbar-space

  &.v-position-top-center,
  &.v-position-top-right,
  &.v-position-top-left
    top 0

    .v-snackbar-container
      transform translate3D(0, calc(-100% - snackbar-space), 0);

  &.v-position-bottom-center,
  &.v-position-bottom-right,
  &.v-position-bottom-left
    bottom 0

    .v-snackbar-container
      transform translate3D(0, calc(-100% + snackbar-space), 0);

  &.v-active
    .v-snackbar-container
      transform translate3D(0, 0, 0)

    .v-snackbar-content
      opacity 1
      transition opacity .4s .1s swift-ease-out-timing-function

  @include layout-xsmall
    margin 0 !important

  .v-snackbar-content
    display flex
    align-items center
    justify-content space-between
    opacity 0
    transition opacity .2s swift-ease-out-timing-function
    will-change opacity

  .v-button
    min-width 64px
    margin -8px -16px

    &:last-child
      margin-left snackbar-height

.v-snackbar-container
  width auto
  min-width 288px
  max-width 568px
  min-height snackbar-height
  padding snackbar-padding 24px
  overflow hidden
  pointer-events auto
  border-radius 2px
  background-color #323232
  transition swift-ease-out
  color #fff
  font-size snackbar-padding

  @include layout-xsmall
    width 100%
    max-width 100%
    border-radius 0

.v-has-toast-top-right
  .v-fab.v-fab-top-right
    transform translate3D(0, snackbar-height + snackbar-padding + 6px, 0)

    @include layout-xsmall
      transform translate3D(0, snackbar-height, 0)

.v-has-toast-top-center
  .v-fab.v-fab-top-center
    transform translate3D(-50%, snackbar-height + snackbar-padding + 6px, 0)

    @include layout-xsmall
      transform translate3D(-50%, snackbar-height, 0)

.v-has-toast-top-left
  .v-fab.v-fab-top-left
    transform translate3D(0, snackbar-height + snackbar-padding + 6px, 0)

    @include layout-xsmall
      transform translate3D(0, snackbar-height, 0)

.v-has-toast-bottom-right
  .v-fab.v-fab-bottom-right
    transform translate3D(0, -snackbar-height - snackbar-padding - 6px, 0)

    @include layout-xsmall
      transform translate3D(0, -snackbar-height, 0)

.v-has-toast-bottom-center
  .v-fab.v-fab-bottom-center
    transform translate3D(-50%, -snackbar-height - snackbar-padding - 6px, 0)

    @include layout-xsmall
      transform translate3D(-50%, -snackbar-height, 0)

.v-has-toast-bottom-left
  .v-fab.v-fab-bottom-left
    transform translate3D(0, -snackbar-height - snackbar-padding - 6px, 0)

    @include layout-xsmall
      transform translate3D(0, -snackbar-height, 0)

.v-has-toast
  .v-fab.v-fab-top-right,
  .v-fab.v-fab-top-center,
  .v-fab.v-fab-top-left
    @include layout-xsmall
      transform translate3D(0, snackbar-height - 4px, 0)

  .v-fab.v-fab-bottom-right,
  .v-fab.v-fab-bottom-center,
  .v-fab.v-fab-bottom-left
    @include layout-xsmall
      transform translate3D(0, -snackbar-height + 4px, 0)
