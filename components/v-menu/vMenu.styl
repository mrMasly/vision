@import '../../styles/variables.styl'

menu-base-width = 56px

.v-menu
  display inline-block

.v-menu-content
  width menu-base-width * 3
  min-width menu-base-width * 1.5
  max-width menu-base-width * 7
  min-height 64px
  max-height calc(100vh - 32px)
  overflow-x hidden
  overflow-y auto
  position absolute
  z-index 131
  transform scale(.9, .85) translateZ(0)
  border-radius 2px
  box-shadow material-shadow-2dp
  opacity 0
  transition width swift-ease-out-duration swift-ease-out-timing-function,
              opacity .3s swift-ease-in-timing-function,
              margin .3s swift-ease-in-timing-function,
              transform 0s .4s swift-ease-in-timing-function
  will-change transform, opacity, width

  &.v-direction-bottom-right
    margin-top -20px
    margin-left -8px
    transform-origin top left

    &.v-active
      margin-top -11px

  &.v-direction-bottom-left
    margin-top -20px
    margin-left 8px
    transform-origin top right

    &.v-active
      margin-top -11px

  &.v-direction-top-right
    margin-top 20px
    margin-left -8px
    transform-origin bottom left

    &.v-active
      margin-top 11px

  &.v-direction-top-left
    margin-top 20px
    margin-left 8px
    transform-origin bottom right

    &.v-active
      margin-top 11px

  &.v-align-trigger
    margin 0

  &.v-size-1
    width menu-base-width * 1.5

  for i in (2..7)
    &.v-size-{i}
      width menu-base-width * i

  &.v-active
    pointer-events auto
    opacity 1
    transform scale(1) translateZ(0)
    transition width swift-ease-out-duration swift-ease-out-timing-function,
                opacity .4s swift-ease-out-timing-function,
                transform .3s swift-ease-out-timing-function

    .v-list
      opacity 1
      transition opacity .3s swift-ease-out-timing-function

  .v-list
    opacity 0
    transition opacity .3s swift-ease-out-timing-function

.v-menu-item
  cursor pointer
  font-size 16px
  line-height 1.2em

  &[disabled]
    cursor default

  .v-list-item-holder
    overflow hidden
    text-overflow ellipsis

.v-menu-backdrop
  z-index 130
