@import '../../styles/variables.styl'

button-width = 88px
button-height = 36px
button-radius = 2px
button-fab-size = 56px
button-fab-size-mini = 40px
button-fab-space = 24px
button-dense-height = 32px
button-icon-size = 40px

.v-button
  min-width button-width
  min-height button-height
  margin 6px 8px
  padding 0 16px
  display inline-block
  position relative
  // overflow hidden
  user-select none
  cursor pointer
  outline none
  background none
  border 0
  border-radius button-radius
  transition swift-ease-out
  color currentColor
  font-family inherit
  font-size 14px
  font-style inherit
  font-variant inherit
  font-weight 500
  letter-spacing inherit
  line-height button-height
  text-align center
  text-transform uppercase
  text-decoration none
  vertical-align top
  white-space nowrap
  &:focus
    outline none
  &::-moz-focus-inner
    border 0
  &:hover
    &:not([disabled])
      &:not(.v-raised)
        background-color rgba(#999, .2)
        text-decoration none
      &.v-raised
        background-color rgba(#000, .12)
  &:active:not([disabled])
    background-color rgba(#999, .4)
  &.v-raised:not([disabled])
    box-shadow material-shadow-2dp
  &.v-dense
    min-height button-dense-height
    line-height button-dense-height
    font-size 13px
  &.v-icon-button,
  &.v-fab
    .v-icon
      position absolute
      top 1px
      right 0
      bottom 0
      left 0
  &.v-icon-button
    width button-icon-size
    min-width button-icon-size
    height button-icon-size
    margin 0 6px
    padding 8px
    border-radius 50%
    line-height 24px
    &:not([disabled])
      &:hover
        background none
    &.v-dense
      width button-dense-height
      min-width button-dense-height
      height button-dense-height
      min-height button-dense-height
      padding 4px
      line-height button-dense-height
    .v-ink-ripple
      border-radius 50%
      .v-ripple
        top 0 !important
        right 0 !important
        bottom 0 !important
        left 0 !important
    .v-ripple.v-active
      animation-duration .9s
  &.v-fab
    width button-fab-size
    height button-fab-size
    padding 0
    min-width 0
    overflow hidden
    box-shadow material-shadow-2dp
    border-radius button-fab-size
    line-height button-fab-size
    background-clip padding-box
    transition swift-ease-out
    transition-property background-color, box-shadow, transform
    &:hover,
    &:focus
      box-shadow material-shadow-5dp
    &.v-mini
      width button-fab-size-mini
      height button-fab-size-mini
      line-height button-fab-size-mini
    .v-ink-ripple
      border-radius button-fab-size
  &[disabled]
    color rgba(#000, .26)
    cursor default
    pointer-events none

    &.v-raised
    &.v-fab
      background-color rgba(#000, .12)
    &.v-fab
      box-shadow none
  &:after
    transition swift-ease-out
  .v-ink-ripple
    border-radius button-radius
    background-clip padding-box
    overflow hidden

.v-button.v-icon-button
.v-button.v-fab
  .v-icon
    display block

.v-fab
.v-speed-dial
  &.v-fab-top-left
  &.v-fab-top-center
  &.v-fab-top-right
  &.v-fab-bottom-left
  &.v-fab-bottom-center
  &.v-fab-bottom-right
    margin 0
    position absolute
    z-index 10
  &.v-fab-top-left
    top button-fab-space
    left button-fab-space
  &.v-fab-top-center
    top button-fab-space
    left 50%
    transform translateX(-50%)
  &.v-fab-top-right
    top button-fab-space
    right button-fab-space
  &.v-fab-bottom-left
    bottom button-fab-space
    left button-fab-space
  &.v-fab-bottom-center
    bottom button-fab-space
    left 50%
    transform translateX(-50%)
  &.v-fab-bottom-right
    right button-fab-space
    bottom button-fab-space

.v-button-tooltip
  &.v-tooltip-top
    margin-top -8px
  &.v-tooltip-right
    margin-left 8px
  &.v-tooltip-bottom
    margin-top 8px
  &.v-tooltip-left
    margin-left -8px
