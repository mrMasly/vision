@import '../../styles/variables.styl'

.v-sidenav
  &.v-left .v-sidenav-content
    left 0
    transform translate3D(-100%, 0, 0)

  &.v-right .v-sidenav-content
    right 0
    transform translate3D(100%, 0, 0)

  &.v-fixed
    .v-sidenav-content,
    .v-sidenav-backdrop
      position fixed

  .v-sidenav-content
    width auto
    max-width 100%
    position absolute
    top 0
    bottom 0
    z-index 100
    overflow hidden
    pointer-events none
    -webkit-overflow-scrolling touch
    transition swift-ease-out
    transition-property transform
    will-change transform

  .v-backdrop
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    z-index 99
    pointer-events none
    background-color rgba(#000, .54)
    opacity 0
    transition swift-ease-in-out
    transition-property opacity
    will-change opacity

.v-sidenav.v-active
  .v-sidenav-content
    box-shadow material-shadow-16dp
    pointer-events auto
    transform translate3D(0, 0, 0)
    overflow visible
  .v-sidenav-backdrop
    opacity 1
    pointer-events auto

.v-sidenav.v-block
  position relative
  display block
  transform none
  outline none
  .v-backdrop
    display none
  .v-sidenav-content
    pointer-events auto
    overflow visible
    position relative
    width 100%
    height 100%
    transform none
    box-shadow none
    z-index 1
