.v-content
  width 100%
  height 100%
  background-color rgb(250,250,250)
  overflow auto

.v-caption
  font-size 12px
  font-weight 400
  letter-spacing .02em
  line-height 17px

.v-body-1
  font-size 14px
  font-weight 400
  letter-spacing .01em
  line-height 20px

.v-body-2
  font-size 14px
  font-weight 500
  letter-spacing .01em
  line-height 24px

.v-subheading
  font-size 16px
  font-weight 400
  letter-spacing .01em
  line-height 24px

.v-title
  font-size 20px
  font-weight 500
  letter-spacing .005em
  line-height 26px

.v-headline
  font-size 24px
  font-weight 400
  letter-spacing 0
  line-height 32px

.v-display-1
  font-size 34px
  font-weight 400
  letter-spacing 0
  line-height 40px

.v-display-2
  font-size 45px
  font-weight 400
  letter-spacing 0
  line-height 48px

.v-display-3
  font-size 56px
  font-weight 400
  letter-spacing -.005em
  line-height 58px

.v-display-4
  font-size 112px
  font-weight 300
  letter-spacing -.01em
  line-height 112px


/*  Links & Buttons
   ========================================================================== */

a:not(.v-button):not(.v-bottom-bar-item)
  text-decoration none

  &:hover
    text-decoration underline


button
  &:focus
    outline none
